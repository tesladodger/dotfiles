#!/usr/bin/env bash

# Use fzf to pushd a directory.

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(find \
        ~ \
        ~/Documents \
        ~/Documents/git \
        ~/.config \
        -mindepth 1 -maxdepth 1 -type d | fzf)
fi

if [[ -n $selected ]]; then
    pushd $selected
fi
